@model Article


<div class="">
    <div class="text-zinc-800 text-lg mb-4 font-semibold">
        جزئیات مقاله:
    </div>
    <!-- product -->
    <div class="mt-7 flex flex-col md:flex-row border-b pb-4">

        <div class="mr-2 md:mr-5 w-full">




            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-green-600" asp-for="pic"></label><span class="text-green-600">:</span><br />
                <a href="/Images/Articles/@Model.pic" target="_blank">
                    <img src="/Upload/Article/@Model.pic" />
                </a>
            </div>


            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-green-600" asp-for="Title"></label><span class="text-green-600">:</span><br />
                @Model.Title
            </div>

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-green-600" asp-for="shortDescription"></label><span class="text-green-600">:</span><br />
                <span style="text-align: justify !important;">
                    @Model.shortDescription
                </span>
            </div>

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-green-600" asp-for="totallDescription"></label><span class="text-green-600">:</span><br />
                <span style="text-align: justify !important;">
                    @Model.totallDescription
                </span>
            </div>

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-green-600" asp-for="Author"></label><span class="text-green-600">:</span><br />
                @Model.Author
            </div>
            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-green-600" asp-for="Tag"></label><span class="text-green-600">:</span><br />
                @{
                    string[] tags = Model.Tag.Split('-');

                }
                @if (tags.Length > 0)
                {
                    foreach (var item in tags)
                    {
                        <span>@item</span> <br />
                    }
                }
                else
                {
                    <span>-</span>
                }
            </div>

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-green-600" asp-for="date"></label><span class="text-green-600">:</span><br />
                @Model.date.ToShamsi()
            </div>

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-green-600" asp-for="SeeCount"></label><span class="text-green-600">:</span><br />
                @Model.SeeCount
            </div>

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-green-600">گروه مقاله</label><span class="text-green-600">:</span><br />

                <span>@Model.articleGroup.Name</span>
            </div>

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-green-600" asp-for="IsActive"></label><span class="text-green-600">:</span><br />
                @if (Model.IsActive == true)
                {
                    <span>فعال</span>
                }
                else
                {
                    <span>غیر فعال</span>

                }
            </div>

        </div>
    </div>
    <a asp-area="Admin" asp-action="Index" asp-controller="Articles" class="mx-auto w-1/3 px-2 py-3 mt-8 text-sm bg-red-500 hover:bg-red-400 transition text-gray-100 rounded-lg">بازگشت</a>

</div>
