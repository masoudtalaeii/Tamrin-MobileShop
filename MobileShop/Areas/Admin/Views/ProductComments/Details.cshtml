@model ProductComment


<div class="">
    <div class="text-zinc-800 text-lg mb-4 font-semibold">
        جزئیات کامنت:
    </div>
    <!-- product -->
    <div class="mt-7 flex flex-col md:flex-row border-b pb-4">

        <div class="mr-2 md:mr-5 w-full">

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-yellow-500" asp-for="Title"></label><span class="text-yellow-500">:</span><br />
                @Model.Title
            </div>

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-yellow-500" asp-for="Text"></label><span class="text-yellow-500">:</span><br />
                <span style="text-align: justify !important;">
                    @Model.Text
                </span>
            </div>

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-yellow-500" asp-for="UserId"></label><span class="text-yellow-500">:</span><br />
                <span style="text-align: justify !important;">
                    @Model.User.Name @Model.User.Family
                </span>
            </div>

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-yellow-500" asp-for="Date"></label><span class="text-yellow-500">:</span><br />

                <span>@Model.Date.ToShamsi()</span>
            </div>

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-yellow-500" asp-for="IsLike"></label><span class="text-yellow-500">:</span><br />
                @if (Model.IsLike == true)
                {
                    <span>پیشنهاد شده</span>
                }
                else
                {
                    <span>پیشنهاد نشده</span>

                }
            </div>

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-yellow-500" asp-for="CheckAdmin"></label><span class="text-yellow-500">:</span><br />
                @if (Model.CheckAdmin == true)
                {
                    <span>تایید</span>
                }
                else
                {
                    <span>رد تایید</span>

                }
            </div>


        </div>
    </div>
    <a asp-area="Admin" asp-action="AllCommnetById" asp-controller="ProductComments" asp-route-id="@Model.ProductId" class="mx-auto w-1/3 px-2 py-3 mt-8 text-sm bg-red-500 hover:bg-red-400 transition text-gray-100 rounded-lg">بازگشت</a>

</div>
