@model List<ProductFeature>
@{
    int id = 1;

}



<div class="">
    <div class="text-zinc-800 text-lg font-semibold mb-4">

        <h3 class="text-gray-700">
            <span>لیست ویژگی:</span>
            <span class="text-red-500"> @ViewBag.ProductName</span>
        </h3>
        <br />
        <a asp-area="Admin"
           asp-action="Create"
           asp-controller="ProductFeatures"
           asp-route-id="@ViewBag.ProductId"
           class="text-zinc-50 hover:text-zinc-100 transition bg-green-600 hover:bg-green-600 px-2 py-1 text-xs rounded-lg">اضافه کردن</a>
        <a asp-area="Admin" asp-action="Index" asp-controller="Products" class="text-zinc-50 hover:text-zinc-100 transition bg-red-600 hover:bg-red-600 px-2 py-1 text-xs rounded-lg">بازگشت</a>

    </div>
    <table class="w-full">
        <thead>
            <tr class="border-y">
                <th>
                    <p class="text-xs md:text-sm font-normal flex items-center text-zinc-400 py-3">
                        R
                    </p>
                </th>
                <th>
                    <p class="text-xs md:text-sm font-normal flex items-center text-zinc-400 py-3">
                        عنوان
                    </p>
                </th>


                <th>
                    <p class="text-xs md:text-sm font-normal flex items-center text-zinc-400">
                        مقدار
                    </p>
                </th>
                <th>
                    <p class="text-xs md:text-sm font-normal flex items-center text-zinc-400 py-3">
                        عملیات
                    </p>
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="hover:bg-zinc-100 text-xs md:text-sm">
                    <td class="px-3 py-4 border-b">
                        <p class="text-zinc-700">
                            @id
                        </p>
                    </td>

                    <td class="p-3 border-b">
                        <p class="text-zinc-700">
                            @item.FeatureTitle
                        </p>
                    </td>



                    <td class="p-3 border-b">
                        <p class="text-zinc-700">
                            @item.FeatureValue
                        </p>
                    </td>
                    <td class="p-3 border-b">
                        <a asp-area="Admin" asp-controller="ProductFeatures"
                           asp-action="Edit"
                           asp-route-id="@item.ProductId"
                           class="text-zinc-50 hover:text-zinc-100 transition bg-blue-500 hover:bg-blue-500  px-2 py-1 text-xs rounded-lg">ویرایش</a>
                    </td>
                </tr>
                id += 1;
            }
        </tbody>
    </table>
</div>
