@model User


<div class="flex justify-between items-center p-4 border-b">
    <h3 class="text-gray-700">اضافه کردن کاربر</h3>

</div>

<div>
    <!-- inputs -->
    <form asp-area="Admin" asp-controller="Users" asp-action="Create" method="post">
        <div class="sm:flex gap-x-5 mt-5">
            <div class="sm:w-1/2 mb-2 sm:mb-0 flex flex-col gap-y-1">
                <label asp-for="Name" class="text-sm text-zinc-700 flex">

                </label>
                <input asp-for="Name" class="focus:shadow-primary-outline text-sm leading-5.6 block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all focus:border-blue-300 focus:outline-none">
                <span asp-validation-for="Name" class="text-red-600 "></span>
            </div>
            <div class="sm:w-1/2 flex flex-col gap-y-1">
                <label asp-for="Family" class="text-sm text-zinc-700 flex">
                </label>
                <input asp-for="Family" class="focus:shadow-primary-outline text-sm leading-5.6 block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all focus:border-blue-300 focus:outline-none">
                <span asp-validation-for="Family" class="text-red-600 "></span>
            </div>
        </div>
        <div class="sm:flex gap-x-5 mt-5">
            <div class="sm:w-1/2 mb-2 sm:mb-0 flex flex-col gap-y-1">
                <label asp-for="UserName" class="text-sm text-zinc-700 flex">
                </label>
                <input asp-for="UserName" class="focus:shadow-primary-outline text-sm leading-5.6 block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all focus:border-blue-300 focus:outline-none">
                <span asp-validation-for="Family" class="text-red-600 "></span>
            </div>
            <div class="sm:w-1/2 mb-2 sm:mb-0 flex flex-col gap-y-1">
                <label asp-for="Password" class="text-sm text-zinc-700 flex">

                </label>
                <input asp-for="Password" class="focus:shadow-primary-outline text-sm leading-5.6 block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all focus:border-blue-300 focus:outline-none">
                <span asp-validation-for="Password" class="text-red-600 "></span>
            </div>
           
        </div>
        <div class="sm:flex gap-x-5 mt-5">
            <div class="sm:w-1/2 mb-2 sm:mb-0 flex flex-col gap-y-1">
                <label asp-for="RoleId" class="text-sm text-zinc-700 flex">
                </label>
                <select name="select" class="focus:shadow-primary-outline text-sm leading-5.6 ease block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-blue-500 focus:outline-none">
                    <option value="">-</option>
                    <option value="1">ادمین</option>
                    <option value="2">کاربر عادی</option>
                </select>
            </div>
            <div class="sm:w-1/2 flex flex-col gap-y-1">
                <label asp-for="Adress" class="text-sm text-zinc-700 flex">
                </label>
                <input asp-for="Adress" class="focus:shadow-primary-outline text-sm leading-5.6 block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all focus:border-blue-300 focus:outline-none">
                <span asp-validation-for="Adress" class="text-red-600 "></span>
            </div>
        </div>
        <button class="mx-auto w-1/3 px-2 py-3 mt-8 text-sm bg-blue-500 hover:bg-blue-400 transition text-gray-100 rounded-lg">
            ثبت اطلاعات
        </button>
    </form>
</div>
