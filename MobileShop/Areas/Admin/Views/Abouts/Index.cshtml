@model List<BE.AboutUs>
@{
    int id = 1;
}


<div class="">
    <div class="text-zinc-800 text-lg font-semibold mb-4">
        درباره ما
        <br />
            <a asp-area="Admin"
               asp-action="Create"
               asp-controller="Abouts"
               class="text-zinc-50 hover:text-zinc-100 transition bg-green-600 hover:bg-green-600 px-2 py-1 text-xs rounded-lg">افزودن</a>
  
    </div>
    <table class="w-full">
        <thead>
            <tr class="border-y">
                <th>
                    <p class="text-xs md:text-sm font-normal flex items-center text-zinc-400 py-3">
                        R
                    </p>
                </th>
                <th>
                    <p class="text-xs md:text-sm font-normal flex items-center text-zinc-400 py-3">
                        تلفن
                    </p>
                </th>
                <th>
                    <p class="text-xs md:text-sm font-normal flex items-center text-zinc-400">
                        موبایل
                    </p>
                </th>
                <th>
                    <p class="text-xs md:text-sm font-normal flex items-center text-zinc-400">
                        ایمیل
                    </p>
                </th>
                <th>
                    <p class="text-xs md:text-sm font-normal flex items-center text-zinc-400">
                        آدرس
                    </p>
                </th>
                <th>
                    <p class="text-xs md:text-sm font-normal flex items-center text-zinc-400 py-3">
                        عملیات
                    </p>
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="hover:bg-zinc-100 text-xs md:text-sm">
                    <td class="px-3 py-4 border-b">
                        <p class="text-zinc-700">
                            @id
                        </p>
                    </td>
                    <td class="px-3 py-4 border-b">
                        <p class="text-zinc-700">
                            @item.Phone
                        </p>
                    </td>
                    <td class="p-3 border-b">
                        <p class="text-zinc-700">
                            @item.Moblie
                        </p>
                    </td>
                    <td class="p-3 border-b">
                        <p class="text-zinc-700">
                            @item.Email
                        </p>
                    </td>
                    <td class="p-3 border-b">
                        <p class="text-yellow-500">
                            @item.Address
                        </p>
                    </td>
                    <td class="p-3 border-b">
                        <a asp-area="Admin"
                           asp-controller="Abouts"
                           asp-action="Details"
                           asp-route-id="@item.AboutUsId"
                           class="text-zinc-50 hover:text-zinc-100 transition bg-red-500 hover:bg-red-500 px-2 py-1 text-xs rounded-lg">جزئیات</a>

                        <a asp-area="Admin" asp-controller="Abouts"
                           asp-action="Edit"
                           asp-route-id="@item.AboutUsId"
                           class="text-zinc-50 hover:text-zinc-100 transition bg-blue-500 hover:bg-blue-500  px-2 py-1 text-xs rounded-lg">ویرایش</a>
                    </td>
                </tr>
                id += 1;
            }
        </tbody>
    </table>
</div>
