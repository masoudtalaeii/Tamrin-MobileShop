@model AboutUs

<div class="">
    <div class="text-zinc-800 text-lg mb-4 font-semibold">
        جزئیات درباره ما:
    </div>
    <!-- product -->
    <div class="mt-7 flex flex-col md:flex-row border-b pb-4">

        <div class="mr-2 md:mr-5 w-full">

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-yellow-500" asp-for="Phone"></label><span class="text-yellow-500">:</span><br />
                @Model.Phone
            </div>

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-yellow-500" asp-for="Moblie"></label><span class="text-yellow-500">:</span><br />
                @Model.Moblie
            </div>

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-yellow-500" asp-for="Address"></label><span class="text-yellow-500">:</span><br />
                @Model.Address
            </div>

            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-yellow-500" asp-for="Email"></label><span class="text-yellow-500">:</span><br />
                @Model.Email
            </div>


            <div class="text-xs sm:text-sm text-zinc-700">
                <label class="text-yellow-500" asp-for="AboutMe"></label><span class="text-yellow-500">:</span><br />
                @Model.AboutMe
            </div>
        </div>
    </div>
    <a asp-area="Admin" asp-action="Index" asp-controller="Abouts" class="mx-auto w-1/3 px-2 py-3 mt-8 text-sm bg-red-500 hover:bg-red-400 transition text-gray-100 rounded-lg">بازگشت</a>

</div>
